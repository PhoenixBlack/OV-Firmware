	IF UI_ENTERING {
		SET UI_ENTERING TO FALSE.
		UI_INPUT_REDRAW().
		
		// HANDLE COMMAND IN MAIN LOOP
		TASK_SCHEDULE(0, TASK_HANDLE_COMMAND@).
	}
	PRESERVE.
}
