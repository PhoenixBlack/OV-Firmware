	IF UI_ENTERING {
		SET UI_ENTERING TO FALSE.
	} ELSE {
		SET UI_ENTERING TO TRUE.
		SET UI_COMMAND TO -1.
		SET UI_PARAMETER TO 0.
	}
	UI_INPUT_REDRAW().
	PRESERVE.
}
